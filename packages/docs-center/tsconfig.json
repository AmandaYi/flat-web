{
  "compilerOptions": {
    "baseUrl": "src",
    "outDir": "dist",
    "module": "ESNext",
    "target": "es5",
    "skipLibCheck": true,
    "lib": [
      "es6",
      "dom"
    ],
    "sourceMap": true,
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": false,
    "strict": true,
    "esModuleInterop": true
  },
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "scripts"
  ],
  "include": [
    "./src/**/*"
  ]
}
